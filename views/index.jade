extends layout

block contentHead
  style
    .carousel {
      margin-bottom: 30px;
    }
    .carousel .container {
      position: absolute;
      right: 0;
      bottom: 0;
      left: 0;
    }
    .carousel-control {
      background-color: transparent;
      border: 0;
      font-size: 120px;
      margin-top: 0;
      text-shadow: 0 1px 1px rgba(0,0,0,.4);
    }
    .carousel .item {
      height: 450px;
    }
    .carousel img {
      min-width: 100%;
      height: 450px;
    }
    .carousel-caption {
      background-color: transparent;
      position: static;
      max-width: 550px;
      padding: 0 20px;
      margin-bottom: 100px;
    }
    .carousel-caption h1,
    .carousel-caption .lead {
      margin: 0;
      line-height: 1.25;
      color: #fff;
      text-shadow: 0 1px 1px rgba(0,0,0,.4);
    }
    .carousel-caption .btn {
      margin-top: 10px;
    }
    .marketing .span3 {
      text-align: center;
    }
    .marketing h2 {
      font-weight: normal;
    }
    .marketing .span3 p {
      margin-left: 10px;
      margin-right: 10px;
    }

    @media (max-width: 979px) {
      .carousel .item {
        height: 450px;
      }
      .carousel img {
        width: auto;
        height: 450px;
      }

    }
    @media (max-width: 767px) {
      .carousel {
        margin-top: -20px;
        margin-left: -20px;
        margin-right: -20px;
      }
      .carousel .container {
      }
      .carousel .item {
        height: 300px;
      }
      .carousel img {
        height: 300px;
      }
      .carousel-caption {
        width: 65%;
        padding: 0 70px;
        margin-bottom: 40px;
      }
      .carousel-caption h1 {
        font-size: 28px;
      }
      .carousel-caption .lead,
      .carousel-caption .btn {
        font-size: 16px;
      }
      .marketing .span4 + .span4 {
        margin-top: 40px;
      }
    }

block contentBody

  #myCarousel.carousel.slide
    .carousel-inner
      .item.active
        img(src='http://sphotos-c.ak.fbcdn.net/hphotos-ak-snc6/c0.0.843.403/p843x403/251962_320696254686412_1282272109_n.jpg', alt='')
        .container
          .carousel-caption
            h1 以大賣場的價格，享用有履歷的優質柳丁
            p.lead 秉持對家鄉的關心，雲林科技大學雲端農業服務中心率先將雲端資訊系統導入農業，全程追蹤管理農產品的進產銷存及檢驗，使用企業資規劃系統建立可徵信的履歷
            //- a.btn.btn-large.btn-primary(href='http://140.125.94.201/index') 前往雲端農場
      .item(ng-repeat="item in slideList")
        img(src='{{item.imgsrc}}', alt='')
        .container
          .carousel-caption
            h1 {{item.title}}
            p.lead {{item.descript}}

    a.left.carousel-control(href='#myCarousel', data-slide='prev') ‹
    a.right.carousel-control(href='#myCarousel', data-slide='next') ›
  .container.marketing
    .row
      .span3(ng-repeat="item in itemList")
        img.img-circle(src='{{item.imgsrc}}')
        h2 {{item.title}}
        p {{item.descript}}
        p
          a.btn(href='buy') {{item.buttonName}}
  script
    !function ($) {
      $(function(){
        $('#myCarousel').carousel()
      })
    }(window.jQuery)
  script(type='text/javascript', src='js/gen/controllers.js')
